<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="shop.gigabox.mybatis.mapper.favorite"><!-- 경로표기법이 클래스명 표기법처럼 사용 -->
	<select id="select_count_fvo" parameterType="shop.gigabox.vo.FVO" resultType="int">
		select count(*)
		from favorite
		where m_idx=#{m_idx} and
			  mv_idx=#{mv_idx}
	</select>

	<select id="select_count_by_idx" parameterType="int" resultType="int">
		select count(*)
		from favorite
		where mv_idx=#{mv_idx}
	</select>

	<insert id="insert_fvo" parameterType="shop.gigabox.vo.FVO">
		insert into favorite
		values (#{mv_idx},
				#{m_idx}
		)
	</insert>
	
	<delete id="delete_fvo" parameterType="shop.gigabox.vo.FVO">
		delete from favorite
		where mv_idx=#{mv_idx} and
			  m_idx=#{m_idx}
	</delete>
</mapper>